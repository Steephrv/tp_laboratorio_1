#ifndef FUNCIONES_CALCULADORA_H_
#define FUNCIONES_CALCULADORA_H_

/**
 *
 * @param flagOp1 recibo como parametro la bandera del op1
 * @param flagOp2 recibo como parametro la bandera del op1
 * @param num1  recibo como parametro  un entero
 * @param num2 recibo como parametro un entero
 * @return menu de opciones
 */
int menu(int flagOp1,int flagOp2,int num1, int num2);


/**
 *
 * @param mensaje que recibo parametro e ingresar dato
 * @return muestro lo ingresado
 */
int ingresarEntero( char mensaje[]);

/**
 *
 * @param num1 primer valor a sumar
 * @param num2 segundo valor a sumar
 * @return int  la suma de  A + B
 */
int sumar(int num1,int num2);

/**
 *
 * @param num1 primer valor a restar
 * @param num2 segundo valoor a restar
 * @return int la resta de A - B
 */
int restar(int num1,int num2);

/**
 *
 * @param num1 primer valor a multiplicar
 * @param num2 segundo valor a multiplicar
 * @return int la multiplicacion de A * B
 */
int multiplicar(int num1,int num2);

/**
 *
 * @param num1 primer valor a dividir
 * @param num2 segundo valor a dividir
 * @param pResultado variable donde almaceno la direccion de memoria del resultado
 * @return int retorno ( 0 o -1) para luego verificar en el main
 */
int dividir( int num1, int num2, float* pResultado);

/**
 *
 * @param numeroIngresado primer valor para relizar el factorial
 * @param pResultado variable donde almaceno la direccion de memoria del resultado
 * @return int retorno (0 o 1) para luego verificar en el main
 */
long long int factorial(int numeroIngresado, int* pResultado);

#endif /* FUNCIONES_CALCULADORA_H_ */
